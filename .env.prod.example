# Production Environment Variables
# Copy this to .env.prod and fill in the values

# Django Settings
DEBUG=False
SECRET_KEY=generate-a-secure-key-here-use-python-secrets
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-ec2-ip

# Database
DB_NAME=timetable
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# CORS (your frontend domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,http://your-ec2-ip

# Frontend API URL (what browser uses to call backend)
NEXT_PUBLIC_API_URL=https://yourdomain.com/api/v1

# Redis/Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
